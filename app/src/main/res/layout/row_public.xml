<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="7dp"
    card_view:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:id="@+id/tvPublicQus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why Android?"
                android:textSize="16dp"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                ></View>
            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/tvPublicDescrioprion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wikipedia is a free online encyclopedia, created and edited by volunteers around the world and hosted by the Wikimedia Foundation."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserId"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tvAskBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask By Name:"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:textColor="@color/colorPrimary"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
